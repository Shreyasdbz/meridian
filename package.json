{
  "name": "meridian",
  "version": "0.4.0",
  "description": "Open-source, self-hosted AI assistant platform for low-power devices",
  "type": "module",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "meridian": "./dist/cli/index.js"
  },
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsup && vite build",
    "build:server": "tsup",
    "build:ui": "vite build",
    "dev": "tsx watch src/main.ts",
    "dev:ui": "vite",
    "preview:ui": "vite preview",
    "start": "node dist/main.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint --no-error-on-unmatched-pattern src/ tests/",
    "format": "prettier --write '**/*.{ts,tsx}' --ignore-unknown",
    "format:check": "prettier --check '**/*.{ts,tsx}' --ignore-unknown",
    "typecheck": "tsc --noEmit",
    "validate:boundaries": "depcruise src/ --config .dependency-cruiser.cjs",
    "validate:all": "npm run typecheck && npm run lint && npm run validate:boundaries && npm run test -- --run"
  },
  "imports": {
    "@meridian/shared": "./src/shared/index.ts",
    "@meridian/axis": "./src/axis/index.ts",
    "@meridian/scout": "./src/scout/index.ts",
    "@meridian/sentinel": "./src/sentinel/index.ts",
    "@meridian/journal": "./src/journal/index.ts",
    "@meridian/bridge": "./src/bridge/index.ts",
    "@meridian/gear": "./src/gear/index.ts",
    "@meridian/main": "./src/main.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import-x": "^4.0.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.19",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.21",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "@google/generative-ai": "^0.24.1",
    "ajv": "^8.17.1",
    "argon2": "^0.44.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "highlight.js": "^11.11.1",
    "ollama": "^0.6.3",
    "openai": "^6.21.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.0",
    "remark-gfm": "^4.0.1",
    "smol-toml": "^1.6.0",
    "ws": "^8.19.0",
    "zustand": "^5.0.11"
  }
}
